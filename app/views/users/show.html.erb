<p id="notice"><%= notice %></p>
<h1>Your Profile</h1>

<h4>
  <strong>Name:</strong>
  <%= @user.first_name %> <%= @user.last_name %> 
</h4>
<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<% unless @reviews == nil %>
    <div>
        <% @reviews.each do |r| %>
            <%= Restaurant.find_by(id: r.review_id).name %> 
            <%= r.review %>
            <%= button_to "Delete", r, method: :delete, class: "button tiny alert"%>
            <br>
        <% end %> 
        <br>
        <br>
    </div> 
<% end %>

<%= link_to 'Edit', edit_user_path(@user), class: "btn btn-link" %> |
<%= link_to 'Back', users_path, class: "btn btn-link" %>
