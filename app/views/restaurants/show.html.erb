<div class="row">
  <div class="col-md-3">
    <p id="notice"><%= notice %></p>

    <h2>
      <%= @restaurant.name %>
    </h2>

    <div class="star-rating" data-score= <%= @avg_rating %> ></div> 
    <p><%= "#{@reviews.length} reviews" %></p>

    <br>
    <p>
      <strong>Address:</strong>
      <%= @restaurant.address %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @restaurant.phone %>
    </p>

    <p>
      <strong>Website:</strong>
      <%= link_to @restaurant.website, @restaurant.website %>
    </p>
  </div>

  <br>
  <h1><%= link_to "Write A Review", new_restaurant_review_path(@restaurant), class: "btn btn-link" %> </h1>

  <div class="col-md-9"> 
    <% if @reviews.blank? %>
      <h3>No reviews yet. Be the first to write one!</h3>
    <% else %>
      <table class="table">
        <thead>
          <tr>
            <th class="col-md-3"></th>
            <th class="col-md-9"></th>
          </tr>
        </thead>
        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td>
                <h4>
                  <%= review.full_name %>
                </h4>
                <p><%= review.created_at.strftime("%-m/%-d/%-y") %></p>
              </td>
              <td>
                <br>
                <div class="star-rating" data-score= <%= review.rating %> ></div>
                <p><%= h(review.comment).gsub(/\n/, '<br/>').html_safe %></p>
                <p><%= link_to 'Remove comment', [@restaurant, review], :confirm => 'Are you sure you want to remove this comment? This cannot be undone.', :method => :delete %></p>
                <%#= button_to "Delete", method: :delete, class: "button tiny alert"%>
              </td>
            </tr>
            
            <%#= link_to 'Edit Review', edit_review_path(@review), class: "btn btn-link" %>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>

</div>


<p id="notice"><%= notice %></p>




<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-link" %> |
<%= link_to 'Back', restaurants_path, class: "btn btn-link" %>



<script>
  $('.star-rating').raty({
    path: '/assets',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>
